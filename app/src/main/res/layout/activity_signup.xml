                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/dept_prompt"
                        android:layout_marginTop="@dimen/_7sdp">

                    <AutoCompleteTextView
                            android:id="@+id/spinner_signup_dept"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/signup_sec_prompt"
                        android:layout_marginTop="@dimen/_7sdp">

                    <AutoCompleteTextView
                            android:id="@+id/spinner_signup_sec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/signup_uname"
                            android:id="@+id/editText_signup_uname"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:id="@+id/signup_password_text_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:hint="@string/signup_pwd"
                            android:id="@+id/editText_signup_pwd"/>

                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_below="@+id/signup_password_text_input"
                        android:layout_marginTop="@dimen/_7sdp">

                    <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:id="@+id/button_signup_clear"
                            android:text="@string/button_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:iconPadding="2dp"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_cancel_black_24dp"/>

                    <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button"
                            android:id="@+id/button_signup_create"
                            android:text="@string/button_create"
                            android:layout_toEndOf="@+id/button_signup_clear"
                            android:layout_toRightOf="@+id/button_signup_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:iconPadding="2dp"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_done_black_24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>