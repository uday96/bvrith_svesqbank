<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.bvrith_svesqbank">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity
                android:name=".ui.activities.MainActivity"
                android:label="BVRITH SVES QBank"
                android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.activities.SignupActivity"
                android:label="Create Account"
                android:launchMode="singleTop"
                android:parentActivityName=".ui.activities.MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.bvrith_svesqbank.ui.activities.MainActivity"/>
        </activity>
        <activity
                android:name=".ui.activities.FetchQuestions"
                android:label="Questions"
                android:launchMode="singleTop"
                android:parentActivityName=".ui.activities.MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.bvrith_svesqbank.ui.activities.MainActivity"/>
        </activity>
        <activity
                android:name=".ui.activities.DisplayQuestions"
                android:label="Questions"
                android:launchMode="singleTop"
                android:parentActivityName=".ui.activities.FetchQuestions">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.bvrith_svesqbank.ui.activities.FetchQuestions"/>
        </activity>
        <activity
                android:name=".ui.activities.DisplayAnswers"
                android:label="Answers"
                android:launchMode="singleTop"
                android:parentActivityName=".ui.activities.DisplayQuestions">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.bvrith_svesqbank.ui.activities.DisplayQuestions"/>
        </activity>
    </application>

</manifest>